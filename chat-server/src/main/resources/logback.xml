    <!-- project default level -->
    <logger name="com.bofa">
        <appender-ref ref="error"/>
    </logger>
    <logger name="com.bofa.server.TaskManager">
        <appender-ref ref="task"/>
    </logger>
    <logger name="com.bofa.server.util.HttpUtil">
        <appender-ref ref="http"/>
    </logger>
    <!--log4jdbc -->
    <logger name="org.springframework" level="INFO"/>

    <root level="DEBUG">
        <appender-ref ref="console"/>
        <appender-ref ref="error"/>
    </root>

</configuration>